{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="text-center">Your secret{% if new_secret %} link{% endif %}</h1>
                <div id="the-secret" class="well well-lg text-center">
                    <div class="copy-trigger" data-clipboard-target="#copy-target">Copy</div>
                    {% if new_secret %}
                        <span id="copy-target">{{ url('get_secret', {'id': secret.id}) }}</span>
                    {% else %}
                        <span id="copy-target">{{ secret.secret }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-xs-6 text-center">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Remaining Views</h3>
                    </div>
                    <div class="panel-body">
                        <h4>{{ secret.views }}</h4>
                    </div>
                </div>

            </div>
            <div class="col-xs-6 text-center">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Remaining Time</h3>
                    </div>
                    <div class="panel-body">
                        <h4>{{ date_for_humans }}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-6 text-center">
                <a href="{{ path('new_secret') }}" class="btn btn-success btn-block btn-lg">New Secret</a><br/>
            </div>
            <div class="col-xs-12 col-md-6 text-center">
                <a href="{{ path('remove_secret', {'id': secret.id}) }}" class="btn btn-danger btn-block btn-lg">Remove Secret</a>
            </div>
        </div>
    </div>

{% endblock %}